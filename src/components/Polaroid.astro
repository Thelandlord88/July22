  <!-- Bubble & Polaroid Styles (add to your main CSS file or <style> block) -->
  <style>
    /* Google Fonts (make sure these are linked in your main layout if not already) */
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Kalam:wght@700&display=swap');

    .polaroid-section-wrapper {
      background: linear-gradient(135deg, #232323, #1a1a1a);
      font-family: 'Inter', sans-serif;
    }

    /* ---------- Bubble Background ---------- */
    .bubbles {
      position: absolute;
      top: 0; left: 0; width: 100%; height: 100%;
      pointer-events: none;
      z-index: 0;
      overflow: hidden;
    }
    .bubble {
      position: absolute;
      bottom: -50px;
      background-color: rgba(255,255,255,0.17);
      border-radius: 50%;
      animation: rise 20s infinite;
    }
    @keyframes rise {
      0% { transform: translateY(0) scale(1); opacity: 1; }
      90% { opacity: 1; }
      100% { transform: translateY(-100vh) scale(0.3); opacity: 0; }
    }
    .bubble:nth-child(1) { left: 10%; width: 20px; height: 20px; animation-duration: 15s; animation-delay: 0s; }
    .bubble:nth-child(2) { left: 20%; width: 10px; height: 10px; animation-duration: 25s; animation-delay: 2s; }
    .bubble:nth-child(3) { left: 35%; width: 25px; height: 25px; animation-duration: 18s; animation-delay: 5s; }
    .bubble:nth-child(4) { left: 50%; width: 15px; height: 15px; animation-duration: 22s; animation-delay: 1s; }
    .bubble:nth-child(5) { left: 65%; width: 8px; height: 8px; animation-duration: 30s; animation-delay: 7s; }
    .bubble:nth-child(6) { left: 80%; width: 18px; height: 18px; animation-duration: 16s; animation-delay: 3s; }
    .bubble:nth-child(7) { left: 90%; width: 12px; height: 12px; animation-duration: 28s; animation-delay: 6s; }
    .bubble:nth-child(8) { left: 5%; width: 22px; height: 22px; animation-duration: 19s; animation-delay: 4s; }
    .bubble:nth-child(9) { left: 95%; width: 14px; height: 14px; animation-duration: 24s; animation-delay: 8s; }
    .bubble:nth-child(10) { left: 25%; width: 16px; height: 16px; animation-duration: 20s; animation-delay: 0s; }

    /* ---------- Polaroid Section & Gallery ---------- */
    .polaroid-section {
      position: relative;
      z-index: 1;
      padding: 4rem 1rem;
      perspective: 1500px;
    }
    .section-title {
      text-align: center;
      font-size: clamp(1.75rem, 4vw, 2.5rem);
      margin-bottom: 3rem;
      color: #e5e7eb;
      font-weight: 700;
      font-family: 'Inter', sans-serif;
    }
    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 4rem 2.5rem;
      max-width: 1100px;
      margin: 0 auto;
    }
    .polaroid {
      position: relative;
      width: 100%;
      aspect-ratio: 3 / 4;
      transform-style: preserve-3d;
      transition: transform .6s ease;
      animation: fadeInUp 1s ease-out forwards;
      animation-delay: var(--delay, 0s);
      opacity: 0;
    }
    .polaroid-inner {
      position: relative;
      width: 100%;
      height: 100%;
      transform-style: preserve-3d;
      transition: transform .7s ease-in-out;
    }
    .polaroid:hover .polaroid-inner {
      transform: rotateY(180deg);
    }
    .side {
      position: absolute;
      inset: 0;
      backface-visibility: hidden;
      border: 10px solid #fefefe;
      border-bottom-width: 60px;
      box-shadow:
        inset 1px 1px 3px rgba(255, 255, 255, .7),
        inset -2px -2px 3px rgba(0, 0, 0, .25),
        0 10px 25px rgba(0, 0, 0, 0.2);
      border-radius: 4px;
      overflow: hidden;
    }
    .side img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .label {
      position: absolute;
      bottom: -45px;
      left: 0;
      right: 0;
      text-align: center;
      font-family: 'Kalam', cursive;
      font-size: 1.2rem;
      font-weight: 700;
      color: #333;
    }
    .back {
      transform: rotateY(180deg);
    }
    .caption {
      margin-top: 1rem;
      text-align: center;
      font-size: .9rem;
      color: #a0a0a0;
    }
    @keyframes fadeInUp {
      from {
        transform: translateY(60px) scale(.9);
        opacity: 0;
      }
      to {
        transform: translateY(0) scale(1);
        opacity: 1;
      }
    }
  </style>
