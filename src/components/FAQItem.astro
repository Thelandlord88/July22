---
// This component now handles the itemprop attributes for a single Q&A pair.
export interface Props {
  question: string;
  answer: string;
}
const { question, answer } = Astro.props;
---
<details class="faq-item py-4 border-b border-gray-warm-200 last:border-b-0">
  <summary class="flex justify-between items-center cursor-pointer font-semibold list-none text-lg">
    <span itemprop="name">{question}</span>
    <span class="details-marker transition-transform duration-300">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="6 9 12 15 18 9" />
      </svg>
    </span>
  </summary>

  <div class="animate-sweep overflow-hidden">
    <div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer" class="pt-4 text-gray-warm-700">
      <p itemprop="text">{answer}</p>
    </div>
  </div>
</details>