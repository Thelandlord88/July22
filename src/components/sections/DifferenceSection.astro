    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('image-comparison-container');
            if (!container) return;

            const beforeImage = document.getElementById('before-image');
            const slider = document.getElementById('slider-handle');
            let isDragging = false;

            const moveSlider = (x) => {
                const rect = container.getBoundingClientRect();
                let newX = x - rect.left;
                newX = Math.max(0, Math.min(newX, rect.width));
                
                beforeImage.style.width = newX + 'px';
                slider.style.left = newX + 'px';
            };

            const onPointerDown = (e) => {
                isDragging = true;
                slider.setPointerCapture(e.pointerId);
            };

            const onPointerUp = (e) => {
                isDragging = false;
                slider.releasePointerCapture(e.pointerId);
            };

            const onPointerMove = (e) => {
                if (!isDragging) return;
                moveSlider(e.clientX);
            };
            
            slider.addEventListener('pointerdown', onPointerDown);
            slider.addEventListener('pointerup', onPointerUp);
            slider.addEventListener('pointermove', onPointerMove);

            // Initialize position to 50%
            const initialX = container.getBoundingClientRect().width / 2;
            moveSlider(container.getBoundingClientRect().left + initialX);
        });
    </script>
